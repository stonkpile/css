{
  "name": "@stonkpile/css",
  "version": "0.0.1",
  "description": "A small and minimalistic css framework",
  "main": "dist/stonkpile.min.css",
  "scripts": {
    "build": "rimraf dist/* && yarn postcss &&  cross-env NODE_ENV=production yarn postcss --ext .min.css && gzip -c dist/stonkpile.min.css  | wc -c | xargs echo 'Size:'",
    "postcss": "postcss ./src/stonkpile.css -d dist/",
    "storybook": "start-storybook -p 6006",
    "build-storybook": "build-storybook"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/stonkpile/css"
  },
  "bugs": {
    "url": "https://github.com/stonkpile/css/issues"
  },
  "license": "MIT",
  "devDependencies": {
    "@babel/core": "^7.11.6",
    "@storybook/addon-actions": "^6.0.26",
    "@storybook/addon-essentials": "^6.0.26",
    "@storybook/addon-links": "^6.0.26",
    "@storybook/html": "^6.0.26",
    "autoprefixer": "^9.7.6",
    "babel-loader": "^8.1.0",
    "cross-env": "^7.0.2",
    "cssnano": "^4.1.10",
    "npm-run-all": "^4.1.5",
    "postcss": "^7.0.29",
    "postcss-cli": "^7.1.1",
    "postcss-import": "^12.0.1",
    "react-is": "^16.13.1",
    "rimraf": "^3.0.2"
  },
  "dependencies": {}
}
